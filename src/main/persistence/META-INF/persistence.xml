<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="ursoPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>br.edu.unifei.ecot13.projetofinal.Bear</class>
        <class>br.edu.unifei.ecot13.projetofinal.Animal</class>
        <class>br.edu.unifei.ecot13.projetofinal.Cave</class>
        <class>br.edu.unifei.ecot13.projetofinal.City</class>
        <class>br.edu.unifei.ecot13.projetofinal.CoastalHabitat</class>
        <class>br.edu.unifei.ecot13.projetofinal.ForestHabitat</class>
        <class>br.edu.unifei.ecot13.projetofinal.God</class>
        <class>br.edu.unifei.ecot13.projetofinal.Habitat</class>
        <class>br.edu.unifei.ecot13.projetofinal.Human</class>
        <class>br.edu.unifei.ecot13.projetofinal.MountainHabitat</class>
        <class>br.edu.unifei.ecot13.projetofinal.Ocean</class>
        <class>br.edu.unifei.ecot13.projetofinal.Park</class>
        <class>br.edu.unifei.ecot13.projetofinal.Salmon</class>
        <class>br.edu.unifei.ecot13.projetofinal.Tree</class>
        <class>br.edu.unifei.ecot13.projetofinal.TundraHabitat</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/urso"/>
            <property name="javax.persistence.jdbc.user" value="ecot13"/>
            <property name="javax.persistence.jdbc.password" value="ecot13"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
